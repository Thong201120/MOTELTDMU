<main class="page editroom-page">
    <section class="clean-block clean-form dark">
        <div class="container">
            
<div class="container tm-mt-big tm-mb-big">
    
    <div class="row">
    <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
        <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
        <div class="row">
            <div class="col-12">
            <h2 class="tm-block-title d-inline-block">Chỉnh sửa</h2>
            </div>
        </div>
        <div class="row tm-edit-product-row">
            <div class="col-xl-6 col-lg-6 col-md-12">
            <form method="post" enctype="multipart/form-data" class="tm-edit-product-form">
                <div class="form-group mb-3">
                <label
                    for="name"
                    >Tiêu đề
                </label>
                <input
                    id="title"
                    name="title"
                    type="text"
                    class="form-control validate"
                    value="<%- listPostID.title %>"
                />
                </div>
                <div class="form-group mb-3">
                <label
                    for="description"
                    >Mô tả</label
                >
                <textarea
                    class="form-control validate"
                    rows="3"
                    id="description"
                    name="description"
                   ><%- listPostID.description %></textarea>
                </div>
                <div class="form-group mb-3">
                    <label
                        for="name"
                        >Địa chỉ (số, đường phố)
                    </label>
                    <input
                        id="streetName"
                        name="streetName"
                        type="text"
                        class="form-control validate"
                        value="<%- listPostID.streetName %>"
                    />
                    </div>
                <div class="form-group mb-3">
                <label
                    for="category"
                    >Khu vực</label
                >
                <select
                    class="custom-select tm-select-accounts"
                    id="wards"
                    name="wards"
                >
                    <option selected><%= listPostID.wards %></option>
                    <option value="Phú Hòa">Phú Hòa</option>
                    <option value="Phú Lợi">Phú Lợi</option>
                    <option value="Phú Thọ">Phú Thọ</option>
                    <option value="Phú Mỹ">Phú Mỹ</option>
                    <option value="Phú Cường">Phú Cường</option>
                    <option value="Hiệp Thành">Hiệp Thành</option>
                    <option value="Tương Bình Hiệp">Tương Bình Hiệp</option>
                    <option value="Phú Tân">Phú Tân</option>
                    <option value="Hòa Phú">Hòa Phú</option>
                    <option value="Hiệp An">Hiệp An</option>
                    <option value="Chánh Mỹ">Chánh Mỹ</option>
                    <option value="Tân An">Tân An</option>
                    <option value="Định Hòa">Định Hòa</option>
                    <option value="Chánh Nghĩa">Chánh Nghĩa</option>
                </select>
                </div>
                <div class="form-group mb-3">
                    <label
                        for="name"
                        >Giá phòng (vnđ)
                    </label>
                    <input
                        id="cost"
                        name="cost"
                        type="text"
                        class="form-control validate"
                        value="<%- listPostID.cost %>"
                    />
                    </div>
                <div class="row">
                    <div class="form-group mb-3 col-xs-12 col-sm-6">
                        <label
                        for="expire_date"
                        >Tiền điện (vnđ)
                        </label>
                        <input
                        id="electric"
                        name="electric"
                        type="text"
                        value="<%- listPostID.electric %>"
                        class="form-control validate"
                        data-large-mode="true"
                        />
                    </div>
                    <div class="form-group mb-3 col-xs-12 col-sm-6">
                        <label
                        for="stock"
                        >Tiền nước (vnđ)
                        </label>
                        <input
                        id="water"
                        name="water"
                        type="text"
                        value="<%- listPostID.water %>"
                        class="form-control validate"
                        />
                    </div>
                    <div class="form-group mb-3">
                        <label
                            for="category"
                            >Loại phòng</label
                        >
                        <select
                            class="custom-select tm-select-accounts"
                            id="roomType"
                            name="roomType"
                        >
                            <option selected><%- listPostID.roomType %></option>
                            <option value="Có gác">Có gác</option>
                            <option value="Không có gác">Không có gác</option>
                        </select>
                        </div>
                        <div class="form-group mb-3">
                            <label
                                for="description"
                                >Ghi chú (tiện ích)</label
                            >
                            <textarea
                                class="form-control validate"
                                rows="3"
                                id="ultilities"
                                name="ultilities"
                    
                            ><%- listPostID.ultilities %></textarea>
                            </div>
                </div>
                <div class="col-12">
            <button type="submit" class="btn btn-primary btn-block text-uppercase">Cập nhật</button>
            </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
            <div class="tm-product-img-dummy mx-auto">
           
            <% if (listPostID.uploadImage != 'null') { %> 
                <div class="product-item" style="padding: 5px;  border-radius: 15px; box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);">
                    <div >
                        <img class="card-img-top w-100 d-block" src="<%- listPostID.uploadImage %>" class="img" alt="" />
                    </div>
                </div>
            <% } if (listPostID.Image1 != 'null') { %> 
                <div class="product-item" style="padding: 5px;  border-radius: 15px; box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);">
                    <div >
                        <img class="card-img-top w-100 d-block" src="<%- listPostID.Image1 %>" class="img" alt="" />
                    </div>
                </div>
            <% } if (listPostID.Image2 != 'null') { %> 
                <div class="product-item" style="padding: 5px;  border-radius: 15px; box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);">
                    <div >
                        <img class="card-img-top w-100 d-block" src="<%- listPostID.Image2 %>" class="img" alt="" />
                    </div>
                </div>
            <% } if (listPostID.Image3 != 'null') { %> 
                <div class="product-item" style="padding: 5px;  border-radius: 15px; box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);">
                    <div >
                        <img class="card-img-top w-100 d-block" src="<%- listPostID.Image3 %>" class="img" alt="" />
                    </div>
                </div>
            <% } if (listPostID.Image4 != 'null') { %> 
                <div class="product-item" style="padding: 5px;  border-radius: 15px; box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);">
                    <div >
                        <img class="card-img-top w-100 d-block" src="<%- listPostID.Image4 %>" class="img" alt="" />
                    </div>
                </div>
            <% } %>
            
            <% if ((listPostID.Image1 == 'null') || (listPostID.Image2  == 'null') || (listPostID.Image3 == 'null') || (listPostID.Image4 == 'null')) { %>
                <p style="margin-top: 15px;"><b >Thêm ảnh</b></p>
                <input type="file"  class="form-control-file" name="Image" >
            <% } %> 
            </div>
            <div class="custom-file mt-3 mb-3">
                <div class="pl-sm-4 pl-2" id="img-section">
                    
                    <!-- <label for="file" style="color: white; height: 40px; width: 100px; background-color: steelblue; margin: auto; justify-content: center; align-items: center;">
                        Tải ảnh lên
                    </label> -->
                  </div>
            </div>
            </div>
            
        </form>
        </div>
        </div>
    </div>
    </div>
</div>
</div>
</section>
</main>